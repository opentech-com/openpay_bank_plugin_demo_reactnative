<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.opentech.openpay.openpaybankplugin.demoapp">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name="com.openpaybankplugindemoapprn.MainApplication"
		android:allowBackup="false"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher"
		android:theme="@style/AppTheme">

		<activity
			android:name="com.openpaybankplugindemoapprn.MainActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenSize|uiMode"
			android:label="@string/app_name"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name="com.openpaybankplugindemoapprn.ScaReactActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
			android:exported="false"
			android:launchMode="singleTask"
			android:windowSoftInputMode="adjustResize" />

	</application>
</manifest>
